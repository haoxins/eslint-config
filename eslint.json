{
  "extends": ["standard", "standard-react"],
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "mocha": true,
    "jasmine": true
  },
  "plugins": [
    "standard",
    "promise",
    "import",
    "node"
  ],
  "rules": {
    "space-before-function-paren": ["error", {
      "asyncArrow": "always",
      "anonymous": "never",
      "named": "never"
    }]
  }
}
